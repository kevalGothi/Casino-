function show(params, totalPages, currentPage) {
  console.log("Data: ", params);
  if (params.length === 0) {
    $('tbody').html(`
      <tr class="text-center">
        <td colspan="7">No more data...</td>
      </tr>
    `);
    return;
  }

  let html = '';
  let serial = 1;
  params.forEach((data) => {
    html += `<tr class="text-center">
              <td id="${data.id}">
                ${serial}
              </td>
              <td>
                <b>${data.amount}</b>
              </td>
              <td>
                <b>${data.plan_name}</b>
              </td>
              <td style="min-width: 190px;">
                <b>${data.plan_id}</b>
              </td>
              <td style="min-width: 190px;">
                <b>${data.user_id}</b>
              </td>
              <td style="min-width: 190px;">
                <b>${data.time}</b>
              </td>
              <td class="project-state">
                <span class="badge badge-success">success</span>
              </td>
            </tr>`;
    serial++;
  });

  $('tbody').html(html);

  // Create pagination buttons
  let paginationHtml = '';
  
  if (currentPage > 1) {
    paginationHtml += `<button id="prevPage" class="btn btn-primary">Previous</button>`;
  }
  
  paginationHtml += ` Page ${currentPage} of ${totalPages} `;
  
  if (currentPage < totalPages) {
    paginationHtml += `<button id="nextPage" class="btn btn-primary">Next</button>`;
  }

  $('#pagination').html(paginationHtml);

  // Event listeners for pagination buttons
  $('#prevPage').click(function () {
    loadPage(currentPage - 1); // Load the previous page
  });
  
  $('#nextPage').click(function () {
    loadPage(currentPage + 1); // Load the next page
  });
}

// Function to load a specific page
function loadPage(page) {
  $.ajax({
    type: "GET",
    url: `/api/webapi/users-income-list?page=${page}`,
    dataType: "json",
    success: function (response) {
      show(response.data.lists4, response.data.totalPages, response.data.currentPage);
    },
    error: function (error) {
      console.error('Error loading page: ', error);
    }
  });
}

// Initial page load (load page 1)
$(document).ready(function () {
