    function show(params) {
      if (params.length == 0) {
        $('tbody').html(`
            <tr class="text-center">
              <td colspan="7">No More...</td>
            </tr>
          `);
        return;
      }
      let html = '';
    let serial = 1; // Initialize serial counter

let show = params.map((data) => {
 let imageHtml = data.image ? 
    `<img src="/uploads/images/${data.image}" alt="Image" width="50px" onclick="openModal('/uploads/images/${data.image}')" style="cursor: pointer;">`
    : '<b>No Image</b>';
    html += `<tr class="text-center">
              <td>${serial}</td> <!-- Serial number column -->
